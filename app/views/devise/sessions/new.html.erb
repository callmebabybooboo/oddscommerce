<!-- app/views/devise/sessions/new.html.erb -->
<div>
  <div class="w-full max-w-md p-8 bg-white rounded-2xl shadow-md">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">เข้าสู่ระบบ</h2>

    <%= form_with model: resource, url: user_session_path, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 focus:outline-none" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.submit "เข้าสู่ระบบ", class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 font-semibold" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "สมัครสมาชิก", new_user_registration_path, class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
