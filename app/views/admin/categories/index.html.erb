<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">หมวดหมู่สินค้า</h1>
    <%= link_to new_admin_category_path, class: "flex items-center gap-2 bg-green-500 hover:bg-green-600 px-4 py-2 text-sm rounded-full shadow transition" do %>
      เพิ่มหมวดหมู่
    <% end %>
  </div>
  <div class="bg-white shadow rounded-xl overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200 text-sm">
      <thead class="bg-white">
        <tr>
          <th class="text-left px-6 py-4 font-bold text-gray-900">ชื่อหมวดหมู่</th>
          <th class="text-right px-6 py-4 font-bold text-blue-700">การจัดการ</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% @categories.each do |category| %>
          <tr>
            <td class="px-6 py-3 text-gray-900 font-medium"><%= category.name %></td>
            <td class="px-6 py-3 text-right space-x-2">
              <%= link_to "แก้ไข", edit_admin_category_path(category), class: "text-blue-600 hover:text-blue-800 font-medium" %>
              <span class="text-gray-400">|</span>
              <%= button_to "ลบ", admin_category_path(category),
                  method: :delete,
                  data: { turbo_confirm: "คุณแน่ใจหรือไม่ที่จะลบหมวดหมู่นี้?" },
                  class: "text-red-600 hover:text-red-800 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
